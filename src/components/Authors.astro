---
import type {CollectionEntry} from "astro:content";

interface Props {
	authors: Array<CollectionEntry<"authors">>
}

const { authors } = Astro.props;
---

<p>
{authors.map(author => (<a href={`/authors/${author.id}`} class="link link-primary hover:link-underline">{author.data.name}</a>))}
</p>
